{
	"$schema": "./config.schema.json",
	"api_keys": [{ "name": "api_name", "api_key": "your api key" }],
	"services": {
		"enable_embeddings": true,
		"ollama": {
			"url": "http://localhost:11434",
			"vector_threshold": 0.85
		}
	},
	"email_suffix_substitutions": [{ "original": "domain.com", "substitutes": ["d.com", "e.com"] }],
	"paths": {
		"temp_path": "/tmp/dumptruck",
		"db_path": "~/.local/share/dumptruck/",
		"seed_path": "./data/"
	},
	"server": {
		"bind_addresses": ["0.0.0.0", "::"],
		"port": 443,
		"tls_cert_path": "/etc/tls/tls.crt",
		"tls_key_path": "/etc/tls/tls.key",
		"oauth": {
			"client_id": "YOUR_OAUTH_CLIENT_ID",
			"client_secret": "YOUR_OAUTH_CLIENT_SECRET",
			"discovery_url": "https://your-oauth-provider/.well-known/openid-configuration",
			"scopes": "openid, profile, email"
		}
	}
}
