{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Dumptruck Configuration",
	"description": "Configuration schema for Dumptruck bulk data analysis system",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"description": "Path to this schema file"
		},
		"api_keys": {
			"type": "array",
			"description": "Configuration for external API integrations",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string",
						"description": "Name of the API service"
					},
					"api_key": {
						"type": "string",
						"description": "API key for the service"
					}
				},
				"required": ["name", "api_key"],
				"additionalProperties": false,
				"additionalItems": false
			},
			"additionalItems": false
		},
		"services": {
			"type": "object",
			"description": "Configuration for optional services",
			"properties": {
				"enable_embeddings": {
					"type": "boolean",
					"description": "Flag to enable or disable embeddings service",
					"default": false
				},
				"ollama": {
					"type": "object",
					"description": "Ollama service configuration for vector similarity search",
					"properties": {
						"url": {
							"type": "string",
							"format": "uri",
							"description": "Ollama service URL",
							"default": "http://localhost:11434"
						},
						"vector_threshold": {
							"type": "number",
							"description": "Similarity threshold for vector searches",
							"default": 0.85,
							"minimum": 0.0,
							"maximum": 1.0
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"email_suffix_substitutions": {
			"type": "array",
			"description": "Email domain alias mappings for canonicalization",
			"items": {
				"type": "object",
				"properties": {
					"original": {
						"type": "string",
						"description": "Original email domain"
					},
					"substitutes": {
						"type": "array",
						"description": "List of substitute domains",
						"items": {
							"type": "string"
						}
					}
				},
				"required": ["original", "substitutes"],
				"additionalProperties": false
			},
			"additionalItems": false,
			"additionalProperties": false
		},
		"paths": {
			"type": "object",
			"description": "Locations to use for a variety of functions",
			"properties": {
				"temp_path": {
					"type": ["string", "null"],
					"description": "Absolute path to temporary directory (defaults to system temp if not specified)"
				},
				"db_path": {
					"type": "string",
					"description": "Path to the database file"
				},
				"seed_path": {
					"type": "string",
					"description": "Path to seed data files"
				}
			},
			"additionalProperties": false
		},
		"server": {
			"type": "object",
			"description": "Server configuration settings",
			"properties": {
				"bind_addresses": {
					"type": "array",
					"description": "List of IP addresses to bind the server to",
					"items": {
						"type": "string"
					}
				},
				"port": {
					"type": "integer",
					"description": "Port number for the server to listen on",
					"minimum": 1,
					"maximum": 65535
				},
				"tls_cert_path": {
					"type": "string",
					"description": "Path to the TLS certificate file"
				},
				"tls_key_path": {
					"type": "string",
					"description": "Path to the TLS key file"
				},
				"oauth": {
					"type": "object",
					"description": "OAuth configuration for authentication",
					"properties": {
						"client_id": {
							"type": "string",
							"description": "OAuth client ID"
						},
						"client_secret": {
							"type": "string",
							"description": "OAuth client secret"
						},
						"discovery_url": {
							"type": "string",
							"format": "uri",
							"description": "OAuth discovery URL"
						},
						"scopes": {
							"type": "string",
							"description": "OAuth scopes"
						}
					},
					"required": ["client_id", "client_secret", "discovery_url"],
					"additionalProperties": false
				}
			},
			"required": ["oauth"],
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
